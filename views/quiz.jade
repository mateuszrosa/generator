extends layout

block content
  h1= title
  if show
    form(method="post")
      p Jaka jest twoja ulubiona pora roku?
      ul
        each item in data
          li
            label=item.title
            input(type="radio" name="quiz" value=item.id)
      input(type="submit" value="Zaglosuj")
      p Aby zobaczyc wyniki zaglosuj
  else
    p Wyniki głosowania
      ul
        each item in data
          li #{item.title} - głosów: #{item.vote} (#{Math.round(item.vote / sum * 100)}%)
    p liczba oddanych głosów to #{sum}
